# UAT Environment Configuration
PORT=3000
NODE_ENV=uat
BASE_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# Database Configuration - Railway PostgreSQL (UAT)
# DATABASE_URL=postgresql://postgres:UAT_PASSWORD@uat-host.proxy.rlwy.net:PORT/railway
# DB_SYNCHRONIZE=false
# DB_LOGGING=true

# JWT Configuration
JWT_SECRET=uat-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=uat-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,https://uat-frontend.example.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Mail Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=uat-email@gmail.com
EMAIL_PASS=uat-app-password
EMAIL_FROM=uat-email@gmail.com